{
	"name": "ethereum-fork",
	"version": "1.0.0",
	"scripts": {
		"build": "npm run clean && npm run compile",
		"start": "npx hardhat node",
		"clean": "npx hardhat clean",
		"compile": "npx hardhat compile",
		"deploy": "npx hardhat run",
		"verify": "npx hardhat verify",
		"migrate": "npx hardhat run ./Nodes/migrates",
		"events": "npx hardhat run ./Nodes/events",
		"test": "npx hardhat test",
		"coverage": "npm run build && npx hardhat coverage --temp artifacts --network coverage"
	},
	"devDependencies": {
		"@nomiclabs/hardhat-ethers": "^2.0.5",
		"@types/node": "^14.14.32",
		"dotenv": "^8.2.0",
		"ethers": "^5.6.2",
		"hardhat": "^2.12.5",
		"ts-generator": "^0.1.1",
		"ts-node": "^10.8.1",
		"ts-node-dev": "^2.0.0",
		"hardhat-ethernal": "^3.1.0",
		"typescript": "^4.2.3"
	}
}
